<%- include("partials/header"); -%>
    <h1>Hello <%= name %></h1>
    <hr>
    <h2>Add a new friend</h2>
    <form action="/add" method="post">
        <input type="text" name="name" placeholder="Name"/>
        <input type="text" name="lname" placeholder="Last Name"/>
        <label for="dob">DOB: </label> <input type="date" name="dob"/>
        <input type="submit" value="Add">
    </form>
    <h2>My friend's Birthdays</h2>
    <table>
        <thead>
            <th>Name</th>
            <th>Last Name</th>
            <th>BOB</th>
            <th>Days till B-Day</th>
        </thead>
        <tbody>
            <% if (locals.friends && friends.length > 0) { %>
                <% friends.forEach((friend, index) => { %>
                    <tr>
                        <td><%= friend.name %></td>
                        <td><%= friend.lname %></td>
                        <td><%= friend.dob.toLocaleDateString() %></td>
                        <td><%= friend.days2Bday %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="4"><strong>Get some friends!</strong></td>
                </tr>
            <% } %>
        </tbody>
    </table>
<%- include("partials/footer"); -%>